@model IEnumerable<ZombieParty_Models.ZombieType>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Zombie Type</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="ZombieType" asp-action="Create" class="btn btn-success">
        Create New Type
      </a>
    </div>
  </div>

  <br />
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead class="bg-dark text-white">
        <tr class="table-info">
          <th>Type Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td width="80%">@item.TypeName</td>
            <td class="text-center">
              <div class="w-75 btn-group" role="group">
                <a class="btn btn-warning mx-2">
                  Edit
                </a>
                <a class="btn btn-danger mx-2">
                  Delete
                </a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <p>No product exists.</p>
  }
</div>